<% include ../partials/header %>

<form action="/user/update" method="post">
    <div class="form-group">
        <label for="">ID</label>
        <input type="number" class="form-control" value="<%= users.user_id %>" name="id" id="" aria-describedby="helpId"
            placeholder="">
        <small id="helpId" class="form-text text-muted">User ID</small>
    </div>

    <div class="form-group">
        <label for="">email</label>
        <input type="text" class="form-control" value="<%= users.email %>" name="email" id="" aria-describedby="helpId"
            placeholder="">
        <small id="helpId" class="form-text text-muted">Email</small>
    </div>

    <div class="form-group"> 
        <label for="">password</label>
        <input type="text" class="form-control" value="<%= users.password %>" name="password" id="" aria-describedby="helpId"
            placeholder="">
        <small id="helpId" class="form-text text-muted">Password</small>
    </div>

    <div class="form-group">
        <input type="text" class="form-control" value="<%= time %>" name="time" id="" aria-describedby="helpId"
            placeholder="">
        <small id="helpId" class="form-text text-muted">Time</small>
    </div>
    
   
        <button type="submit" class="btn">Cancel</button>
        <button type="submit" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" role="button" >DELETE</button>

    </div>
    </form>
    
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel"> Confirm Delete </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body"> Do you want to delete user ? </div>
            <div class="modal-footer">
    
              <a name="" id="" class="btn btn-success" href="/user_delete/<%= users.user_id %>" role="button"> DELETE </a>
              <button type="button" class="btn btn-secondary" data-dismiss="modal"> CANCLE </button>
              
            </div>
          </div>
        </div>
      </div>
    
    
    </form>
   





</form>


<script language="JavaScript">
    function Confirm() {
        if (confirm('Do you want to delete user') == true) {
            window.location = "/user_delete/<%= users.user_id %>";

        } else {
            return (null);
        }
    }
</script>



