<% include ../partials/header %>
  
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th><a name="" id="" class="btn btn-primary" href="/product_add" role="button">Add New</a></th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                 <% products.forEach(function(product) { %>
                    <tr>
                        <td scope="row"><%= product.id %></td>
                        <td><%= product.title %></td>
                        <td><%= product.price %></td>
                        <td><a name="" id="" class="btn btn-primary" href="/products/<%= product.id %>" role="button">Edit</a></td>
                        <td><a name="" id="" class="btn btn-danger" href="/product_delete/<%= product.id %>" onclick="return confirm('Are you sure you want to delete?')" role="button">Delete</a></td>
                        
                    </tr>
                     <% }); %>
                </tbody>
            </table>


 <% include ../partials/footer %>